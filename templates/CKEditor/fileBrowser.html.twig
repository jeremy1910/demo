
{%  extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('fileBrowser') }}
{% endblock %}

{% block body %}
    {% if empty is defined and empty == true %}
        <div class="alert alert-secondary center-block-page" role="alert">
            <h4 class="alert-heading w-100 text-center">Il n'y a pas d'image ...</h4>
            <hr>
            <p>Uploader d'abord une image, et vous la retrouverez ici</p>
        </div>
    {% else %}
    <div class="fileBrowserContainer">
        {% for file in files %}
            <a  id="test" class="text-decoration-none text-reset img-popover" data-toggle="popover">
                <img  class="fileBrowserItem js-uploaded-file mt-2 ml-2 shadow" src="{{ baseUrl ~ file}}" alt="">
            </a>
        {%  endfor %}
    </div>
    {% endif %}
{%  endblock %}


{%  block javascripts %}
    {{ parent() }}

    {{ encore_entry_script_tags('fileBrowser') }}

{% endblock %}