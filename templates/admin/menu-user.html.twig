{# @var formUser \App\Entity\User\Filter\UserFilter #}
{# @var formUserAdd \App\Form\User\Add\UserAddType #}
{{ form_start(formUser) }}
<div class="row">

    <div class="col-6">
        {{ form_row(formUser.id) }}
        {{form_row(formUser.enable) }}
        {{form_row(formUser.adresseMail) }}


        <div id="divAddNewCategory" class="row">
            <div class="col-10">
                <div class="form-group">
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addUserModel">
                        Ajouter un utilisateur
                    </button>
                </div>
            </div>
        </div>

    </div>
    <div class="col-6">
        {{form_row(formUser.username) }}
        {{form_row(formUser.roles) }}
        {{form_row(formUser.submit) }}
    </div>
</div>


{{ form_end(formUser) }}

<div class="table-responsive mt-4">
    <table class="table table-hover">
        <thead class="table-dark">
        <tr id="title-lines">
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody id="table-body-user">

        </tbody>
    </table>
</div>
<div class="row">
    <div class="col-10">
        <div id="pagination-user" style="width: min-content ; margin: auto;"></div>
    </div>
    <div class="col-2">
        <select id="selecter-user">
            <option>10</option>
            <option>20</option>
            <option>30</option>
            <option>40</option>
            <option>50</option>
        </select>
    </div>
</div>


<!-- Modal Ajout d'un utilisateur -->
<div class="modal fade" id="addUserModel" tabindex="-1" role="dialog" aria-labelledby="addUserModelLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addUserModelLabel">Ajout d'un utilisateur</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{ form_start(formUserAdd) }}
                {{form_row(formUserAdd.username) }}
                {{form_row(formUserAdd.password) }}
                {{form_row(formUserAdd.roles) }}
                {{form_row(formUserAdd.adresseMail) }}
                {{form_row(formUserAdd.enable) }}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                {{form_row(formUserAdd.submit, { 'attr': {'data-dismiss': 'modal'} }) }}
                {{ form_end(formUserAdd) }}
            </div>
        </div>
    </div>
</div>