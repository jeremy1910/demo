{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('login') }}
{% endblock %}

{%  block body %}
<div class="container-fluid center " >
    <h3 class="w-100 text-center rounded mt-4 mb-5 pt-2 pb-2 border-bottom font-weight-bold title-with-line" style="color: #6c757d;">INSCRIPTION</h3>
</div>
<div id="subscribe-container" class="container">

    {% if success is defined %}
        {% if success == true %}
            <svg id="successAnimation" class="animated w-100" xmlns="http://www.w3.org/2000/svg" width="300" height="300" viewBox="0 0 70 70">
                <path id="successAnimationResult" fill="#D8D8D8" d="M35,60 C21.1928813,60 10,48.8071187 10,35 C10,21.1928813 21.1928813,10 35,10 C48.8071187,10 60,21.1928813 60,35 C60,48.8071187 48.8071187,60 35,60 Z M23.6332378,33.2260427 L22.3667622,34.7739573 L34.1433655,44.40936 L47.776114,27.6305926 L46.223886,26.3694074 L33.8566345,41.59064 L23.6332378,33.2260427 Z"/>
                <circle id="successAnimationCircle" cx="35" cy="35" r="24" stroke="#979797" stroke-width="2" stroke-linecap="round" fill="transparent"/>
                <polyline id="successAnimationCheck" stroke="#979797" stroke-width="2" points="23 34 34 43 47 27" fill="transparent"/>
            </svg>

            <h3 class="w-100 text-center">Un e-mail de confirmation vous a été envoyé</h3>
            <h5 class="w-100 text-center mt-4"><a class="text-decoration-none text-reset" href="{{ path('index') }}">Retour</a></h5>
        {% endif %}
   {% else %}
    {{ form_start(form) }}
       <div class="row">
           <div class="col-lg-6">
               {{ form_row(form.username, {'label': 'Nom d\'utilisateur'}) }}
           </div>
           <div class="col-lg-6">
               {{ form_row(form.adresseMail) }}
           </div>
           <div class="col-lg-6">
               {{ form_row(form.lastName, {'label': 'Nom'}) }}
           </div>
           <div class="col-lg-6">
               {{ form_row(form.firstName, {'label': 'Prénom'}) }}
           </div>

           <div class="col-lg-6">
               {{ form_row(form.password.first) }}
           </div>
            <div class="col-lg-6">
               {{ form_row(form.password.second) }}
           </div>
           <div class="col d-flex justify-content-end">
               <button class="btn btn-success-custom float-right">Valider</button>
           </div>
       </div>



    {{ form_end(form) }}

    {% endif %}
</div>
{% endblock %}