
{%  extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('fileBrowser') }}
{% endblock %}

{% block body %}
    {% if empty is defined and empty == true %}
        <div class="alert alert-secondary center-block-page" role="alert">
            <h4 class="alert-heading w-100 text-center">Il n'y a pas d'image ...</h4>
            <hr>
            <p>Uploader d'abord une image, et vous la retrouverez ici</p>
        </div>
    {% else %}
    <div class="fileBrowserContainer">
        {% for file in files %}
            <a id="img-{{ loop.index }}" class="fileBrowserItem  section shadow text-decoration-none text-reset js-popover-filbrowser" tabindex="0" data-trigger="focus" role="button" data-toggle="popover" title="Action" data-html="true" data-content="<a role='button' href='{{ baseUrl ~ file}}' class='btn btn-secondary js-select-img d-block w-100'>Selectionner</a><a role='button' href='{{ loop.index }}' class='btn btn-danger js-delete-img d-block w-100 mt-2'>Supprimer</a>">
                <img  class=" js-uploaded-file " src="{{ baseUrl ~ file}}" alt="">
            </a>
        {%  endfor %}
    </div>
    {% endif %}
{%  endblock %}


{%  block javascripts %}
    {{ parent() }}

    {{ encore_entry_script_tags('fileBrowser') }}

{% endblock %}